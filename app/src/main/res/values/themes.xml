<resources>
    <!-- Base application theme. -->
    <style name="Theme.SyncPlay" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sp1</item>
        <item name="colorPrimaryVariant">@color/sp2</item>
        <item name="colorOnPrimary">#7A7A7A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sp2</item>
        <item name="colorSecondaryVariant">@color/sp3</item>
        <item name="colorOnSecondary">#7A7A7A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/sp_shade</item>
        <item name="android:textColorSecondary">#555555</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_activity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>